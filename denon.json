{
  "$schema": "https://deno.land/x/denon/schema.json",
  "allow": [
    "net",
    "env",
    "read",
    "write"
  ],
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "unstable": false,
      "desc": "run server",
      "env": {
        "ENV": "development"
      },
      "watch": true,
      "tsconfig": "tsconfig.json"
    },
    "start:docker": {
      "cmd": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
      "unstable": false,
      "desc": "run server",
      "env": {
        "ENV": "development"
      },
      "watch": true,
      "tsconfig": "tsconfig.json"
    },
    "test": {
      "cmd": "deno test",
      "desc": "Test the server.",
      "unstable": false,
      "env": {
        "ENV": "test"
      },
      "watch": false,
      "tsconfig": "tsconfig.json"
    },
    "test:docker": {
      "cmd": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --build --exit-code-from deno-rest --abort-on-container-exit",
      "desc": "Test the server in docker container",
      "watch": false
    },
    "test:cov": {
      "cmd": "deno test --coverage=./cov",
      "desc": "Test Coverage",
      "unstable": false,
      "env": {
        "ENV": "test"
      },
      "watch": false,
      "tsconfig": "tsconfig.json"
    },
    "prod": {
      "cmd": "deno run app.bundle.js",
      "desc": "Run the server.",
      "unstable": false,
      "env": {
        "ENV": "production"
      },
      "watch": false
    },
    "fmt": {
      "cmd": "deno fmt",
      "desc": "Format the code.",
      "allow": [],
      "watch": false
    },
    "lint": {
      "cmd": "deno lint",
      "desc": "Code linter for JavaScript and TypeScript",
      "unstable": true,
      "watch": false,
      "allow": []
    }
  },
  "logger": {
    "fullscreen": true,
    "quiet": false,
    "debug": true
  },
  "watcher": {
    "interval": 350,
    "exts": ["js", "jsx", "ts", "tsx", "json"],
    "match": ["**/*.*"],
    "skip": [
      "*/.git/*",
      "*/.idea/*",
      "*/.vscode/*",
      "*/.env/*"
    ],
    "legacy": false
  }
}
